# VARIABLES

seinfeld_intro = "C:/Users/micah_sessions/Downloads/seinfeld_intro_SNIP.wav"



snake = "C:/Users/micah_sessions/Downloads/snake_death.wav"


# ---------

define :drum_special do
  with_fx :octaver do
    sample :bd_sone, amp: 1.5
    sleep 1
  end
end

define :drum_regular do
  sample :bd_sone, amp: 1.5
  sleep 1
end

use_bpm 110
use_synth :dpulse

sample seinfeld_intro

sleep 5.5

live_loop :main do
  #M3
  play :e
  sleep 0.75
  play :e
  sleep 0.25
  play :gs
  sleep 0.5
  play :b
  sleep 0.5
  play :d4
  sleep 1
  play :gs
  sleep 0.75
  play :a
  sleep 0.25
  
  #M4
  sleep 0.5
  play :a
  sleep 1
  play :g
  sleep 0.5
  play :fs
  sleep 1
  play :f
  sleep 0.75
  play :e
  sleep 0.25
  
  #M5
  sleep 0.25
  play :e4
  sleep 0.25
  play :e
  sleep 0.5
  play :fs
  sleep 0.5
  play :fs
  sleep 0.5
  play :g
  sleep 1
  play :gs
  sleep 0.75
  play :a
  sleep 0.25
  
  #M6
  sleep 0.5
  play :a4
  sleep 0.5
  sleep 1
  sleep 2
end

sleep 32

live_loop :drum_special do
  drum_special
end

live_loop :drum_regular do
  
  drum_regular
end

sleep 32

live_loop :snake_SNAKE! do
  sample snake, amp: 2
  sleep 3
end
