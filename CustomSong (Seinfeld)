# Seinfeld Sublime Sine Waves Remix

# VARIABLES

seinfeld_intro = "C:/Users/micah_sessions/Downloads/seinfeld_intro_SNIP.wav"

snake = "C:/Users/micah_sessions/Downloads/snake_death.wav"

# ---------

define :drum_special do
  with_fx :octaver do
    sample :bd_sone, amp: 1.5
    sleep 1
  end
end

define :drum_regular do
  sample :bd_sone, amp: 1.5
  sleep 1
end

define :snake_requiem do
  sample snake, amp: 2
  sleep 3
end

a = 0.25
define :creschendo do
  32.times do
    sample :bd_haus, amp: a
    a = a + 0.10
    sleep 1
  end
end

use_bpm 115
use_synth :dpulse

sample seinfeld_intro

sleep 5.7

live_loop :main do
  #M3
  play :e
  sleep 0.75
  play :e
  sleep 0.25
  play :gs
  sleep 0.5
  play :b
  sleep 0.5
  play :d4
  sleep 1
  play :gs
  sleep 0.75
  play :a
  sleep 0.25
  
  #M4
  sleep 0.5
  play :a
  sleep 1
  play :g
  sleep 0.5
  play :fs
  sleep 1
  play :f
  sleep 0.75
  play :e
  sleep 0.25
  
  #M5
  sleep 0.25
  play :e4
  sleep 0.25
  play :e
  sleep 0.5
  play :fs
  sleep 0.5
  play :fs
  sleep 0.5
  play :g
  sleep 1
  play :gs
  sleep 0.75
  play :a
  sleep 0.25
  
  #M6
  sleep 0.5
  play :a4
  sleep 0.5
  sleep 1
  sleep 2
end

sleep 16

live_loop :drum_special do
  31.times do
    drum_special
  end
  stop
end

live_loop :drum_regular do
  31.times do
    drum_regular
  end
  stop
end

sleep 16

live_loop :snake_SNAKE! do
  6.times do
    sample snake, amp: 2
    sleep 3
  end
  stop
end

sleep 32

creschendo

live_loop :drum_special do
  drum_special
end

live_loop :drum_regular do
  drum_regular
end

live_loop :snake_SNAKE! do
  snake_requiem
end
