# Seinfeld Sublime Sine Waves Remix

# VARIABLES

airline_skit = "C:/Users/papap/Downloads/jerry_seinfeld_on_airplane_travel_(getmp3.pro).wav"
snake = "C:/Users/micah_sessions/Downloads/snake_death.wav"

# ---------

define :drum_special do
  with_fx :octaver do
    sample :bd_sone, amp: 1.5
    sleep 1
  end
end

define :drum_regular do
  sample :bd_sone, amp: 1.5
  sleep 1
end

define :snake_requiem do
  sample snake, amp: 2
  sleep 3
end

a = 0.25
define :creschendo do
  32.times do
    sample :bd_haus, amp: a
    a = a + 0.10
    sleep 1
  end
end

use_bpm 115
use_synth :dpulse

sample airline_skit

sleep 43

live_loop :main do
  #M3
  8.times do
    play :e
    sleep 0.75
    play :e
    sleep 0.25
    play :gs
    sleep 0.5
    play :b
    sleep 0.5
    play :d4
    sleep 1
    play :gs
    sleep 0.75
    play :a
    sleep 0.25
    
    #M4
    sleep 0.5
    play :a
    sleep 1
    play :g
    sleep 0.5
    play :fs
    sleep 1
    play :f
    sleep 0.75
    play :e
    sleep 0.25
    
    #M5
    sleep 0.25
    play :e4
    sleep 0.25
    play :e
    sleep 0.5
    play :fs
    sleep 0.5
    play :fs
    sleep 0.5
    play :g
    sleep 1
    play :gs
    sleep 0.75
    play :a
    sleep 0.25
    
    #M6
    sleep 0.5
    play :a4
    sleep 0.5
    sleep 1
    sleep 2
  end
  cue :go
  stop
end

sleep 16

live_loop :drum_special do
  31.times do
    drum_special
  end
  stop
end

live_loop :drum_regular do
  31.times do
    drum_regular
  end
  stop
end

sleep 16

live_loop :snake_SNAKE! do
  6.times do
    sample snake, amp: 2
    sleep 3
  end
  stop
end

sleep 32

creschendo

live_loop :drum_special do
  28.times do
    drum_special
  end
  stop
end

live_loop :drum_regular do
  28.times do
    drum_regular
  end
  stop
end

live_loop :snake_SNAKE! do
  8.times do
    snake_requiem
  end
  stop
end


live_loop :hum do
  sync :go
  sample :ambi_glass_hum, rate: 0.5
  sleep 10
  if sync :stop
    stop
  end
end

i = 0
live_loop :drone  do
  sync :go
  sample :ambi_drone, pitch: i
  i = i + 2
  sleep 2
  if i >= 10
    2.times do
      sample :ambi_drone, pitch: i
      sleep 2
    end
    sample :ambi_drone, pitch: i, release: 4
    cue :stop
    stop
  end
end
